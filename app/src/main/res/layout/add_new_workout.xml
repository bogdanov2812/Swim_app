<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/workout_date"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_weight="0"
            android:autofillHints=""
            android:background="@android:color/white"
            android:gravity="center"
            android:hint="Дата"
            android:inputType="textShortMessage"
            tools:ignore="HardcodedText,TextFields"
            tools:targetApi="o" />

        <LinearLayout
            android:layout_width="233dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/bt_previos_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_navigate_before_24" />

            <TextSwitcher
                android:id="@+id/text_switcher_time"
                android:layout_width="144dp"
                android:layout_height="19dp" />

            <ImageButton
                android:id="@+id/bt_next_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_navigate_next_24" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="406dp">



        <EditText
            android:id="@+id/workout_program"
            android:layout_width="329dp"
            android:layout_height="400dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:autofillHints=""
            android:background="@android:color/white"
            android:gravity="center"
            android:hint="Программа тренировки"
            android:inputType="textMultiLine"
            android:textAlignment="textStart"
            tools:ignore="HardcodedText,RtlCompat" />
        <ImageView
            android:id="@+id/image_view"
            android:layout_width="329dp"
            android:layout_height="400dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp" />
        <ImageButton
            android:id="@+id/delete_photo"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_above="@+id/add_photo"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/ic_baseline_delete_24" />

        <ImageButton
            android:id="@+id/add_photo"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/ic_baseline_insert_photo_24" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/workout_size"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:autofillHints=""
            android:background="@android:color/white"
            android:gravity="center"
            android:hint="Объем тренировки"
            android:inputType="numberSigned"
            tools:ignore="HardcodedText,TextFields"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/workout_target"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:autofillHints=""
            android:background="@android:color/white"
            android:gravity="center"
            android:hint="Направленность"
            android:inputType="textShortMessage"
            tools:ignore="HardcodedText,TextFields"
            tools:targetApi="o" />
    </LinearLayout>

</LinearLayout>